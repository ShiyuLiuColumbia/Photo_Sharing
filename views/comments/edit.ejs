<% include ../partials/header %>
	<h1>Edit comment</h1>
	<form action="/experiences/<%= experience_id %>/comments/<%= foundComment._id %>?_method=PUT" method="post">
		<!-- combine text and author in comment, so in app.js we can simply get req.body.comment.text -->
		<input type="text" name="comment[text]" value="<%= foundComment.text %>">
		<input type="submit">
	</form>


<div class="container"  >
	<header style="text-align: center;">
	    <h2>Edit comment</h2>
	</header>
	<form style="width:30%; margin: 0 auto;" action="/experiences/<%= experience_id %>/comments/<%= foundComment._id %>?_method=PUT" method="post">
	    <div class="form-group">
	    	<textarea rows="10" class="form-control" name="comment[text]" placeholder="Content"><%= foundComment.text %></textarea>    
	    </div>

	    <button type="submit" class="btn btn-primary form-control">Submit</button>
	    <a href="/experiences/<%= experience_id %>">go back</a>
	</form>       
</div>
<% include ../partials/footer %>